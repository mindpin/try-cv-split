= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :published
    %br/
    = f.check_box :published
  .actions
    - if @post.new_record?
      %a.create-submit{href: 'javascript:;'} Create Post
    - else
      %a.update-submit{href: 'javascript:;', data: {id: @post.id}} Update Post