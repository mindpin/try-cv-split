.page-book{data: {book: {id: @book.id}}}
  %p#notice= notice
  %p
    %strong Title:
    = @book.title
  %p
    %strong Body:
    = @book.body
  %p
    %strong Published:
    = @book.published
  = link_to 'Edit', edit_book_path(@book)
  |
  = link_to 'Back', books_path

  %h1 Listing Comments
  %table.comments.ui.celled.table
    %thead
      %tr
        %th Body
        %th{:colspan => "3"}
    %tbody

  %a.ui.labeled.icon.button.green{:href => new_book_comment_path(@book)}
    %i.icon.add
    New Comment
